{% extends 'layout.html.twig' %}

{% block content %}
    <div class="container">
        <div class="row justify-content-around mt-5">
            {% for product in products %}
            <div class="col-3 mb-5">
                <div class="card shadow-lg text-center">
                    <img src="{{ asset(product.Media) }}" class="card-img-top" alt="{{ product.AltMedia }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ product.Name }}</h5>
                        <p class="card-text">
                            {{ product.Description }}
                        </p>
                        <p>Price : <span class="main-text-color"> {{ product.priceHT }}</span> <img class="width-20"
                                                                                                    src="{{ asset('images/nanascoin.svg') }}"
                                                                                                    alt="image nanascoin">
                        </p>
                        <a href="{{ path('cart_add', {'id': product.id}) }}"
                           class="btn main-background-color text-white">Add
                            to cart</a>
                    </div>
                </div>
            </div>
            {% else %}
                <p class="title mb-3">Le catalogue est vide</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
