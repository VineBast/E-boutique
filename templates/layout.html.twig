{# templates/layout.html.twig #}

{% extends 'base.html.twig' %}

{% block stylesheets %}

    <link href="{{ asset('images/nanasnft-favicon.svg') }}" rel="icon" type="image/png" style="width: 100%;">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link href="{{ asset('css/main.css') }}" type="text/css" rel="stylesheet">

{% endblock %}

{% block body %}
    <header class="shadow-sm">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg">
                <div class="container-fluid">
                    <a class="navbar-brand" href="/">
                        <img src="{{ asset('/images/nanasnft.svg') }}" class="width-40" alt="logo nanasnft">
                    </a>
                </div>
                <div class="container-fluid justify-content-end">
                    {% if app.user %}
                    <a class="btn" href="{{ path('app_user_index') }}">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor"
                             class="main-text-color" viewBox="0 0 16 16">
                            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
                            <path fill-rule="evenodd"
                                  d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
                        </svg>
                    </a>
                    <a class="btn" href="{{ path('cart_index') }}">
                        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="main-text-color" viewBox="0 0 16 16">
                            <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
                        </svg>
                    </a>
                    <a href="{{ path('app_logout') }}" class="no-deco" title="Logout account">
                        <button type="button" class="btn btn-outline-dark m-2">Sign out</button>
                    </a>
                    {% else %}
                    <a href="{{ path('app_login') }}" class="no-deco" title="Sign in">
                        <button type="button" class="btn btn-light m-2">Sign in</button>
                    </a>
                    <a href="{{ path('app_register') }}" class="no-deco" title="Sign up">
                        <button type="button" class="btn main-background-color text-white">Sign up</button>
                    </a>
                </div>
                {% endif %}
            </nav>
        </div>
    </header>
    {% block content %}{% endblock %}

{% endblock %}